{
  "compilerOptions": {
    "baseUrl": "./src",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2017",
    "sourceMap": true
  }
}
